local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- // Configuration
local Settings = {
    OrbitActive = false,
    Radius = 6,
    Speed = 12,
    Height = 1,
    TargetPart = "HumanoidRootPart"
}

local TargetPlayer = nil
local PlayerList = {}
local CurrentIndex = 1
local LockedTool = nil -- Stores ONLY the first tool

-- // UI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, 200, 0, 150)
Main.Position = UDim2.new(0, 50, 0.5, -75)
Main.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Main.Active = true
Main.Draggable = true
Instance.new("UICorner", Main)

local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "ORBIT LOCK-ON V2"
Title.BackgroundColor3 = Color3.fromRGB(100, 0, 200)
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold

local NameDisplay = Instance.new("TextLabel", Main)
NameDisplay.Size = UDim2.new(1, 0, 0, 40)
NameDisplay.Position = UDim2.new(0, 0, 0.25, 0)
NameDisplay.BackgroundTransparency = 1
NameDisplay.TextColor3 = Color3.new(1,1,1)
NameDisplay.Text = "Select Target"

local NextBtn = Instance.new("TextButton", Main)
NextBtn.Size = UDim2.new(0, 30, 0, 30)
NextBtn.Position = UDim2.new(0.8, 0, 0.3, 0)
NextBtn.Text = ">"

local PrevBtn = Instance.new("TextButton", Main)
PrevBtn.Size = UDim2.new(0, 30, 0, 30)
PrevBtn.Position = UDim2.new(0.05, 0, 0.3, 0)
PrevBtn.Text = "<"

local Status = Instance.new("TextLabel", Main)
Status.Size = UDim2.new(1, 0, 0, 30)
Status.Position = UDim2.new(0, 0, 0.75, 0)
Status.BackgroundTransparency = 1
Status.Text = "STATUS: IDLE [K]"
Status.TextColor3 = Color3.fromRGB(200, 200, 200)

-- // Helper Functions
local function GetFirstWeapon()
    -- Only get the very first item that exists in the backpack
    local items = LocalPlayer.Backpack:GetChildren()
    for _, item in pairs(items) do
        if item:IsA("Tool") then
            return item
        end
    end
    return nil
end

local function UpdateUI()
    PlayerList = {}
    for _, v in pairs(Players:GetPlayers()) do
        if v ~= LocalPlayer then table.insert(PlayerList, v) end
    end
    if #PlayerList > 0 then
        if CurrentIndex > #PlayerList then CurrentIndex = 1 end
        if CurrentIndex < 1 then CurrentIndex = #PlayerList end
        TargetPlayer = PlayerList[CurrentIndex]
        NameDisplay.Text = TargetPlayer.Name
    end
end

NextBtn.MouseButton1Click:Connect(function() CurrentIndex += 1 UpdateUI() end)
PrevBtn.MouseButton1Click:Connect(function() CurrentIndex -= 1 UpdateUI() end)
UpdateUI()

-- // MAIN LOOP
local Angle = 0
RunService.RenderStepped:Connect(function(dt)
    local char = LocalPlayer.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    local camera = workspace.CurrentCamera

    if Settings.OrbitActive and TargetPlayer and TargetPlayer.Character and TargetPlayer.Character:FindFirstChild(Settings.TargetPart) then
        local targetHrp = TargetPlayer.Character[Settings.TargetPart]
        
        if hrp then
            -- 1. Orbit Position
            Angle = Angle + (Settings.Speed * dt)
            local offset = Vector3.new(math.cos(Angle) * Settings.Radius, Settings.Height, math.sin(Angle) * Settings.Radius)
            hrp.CFrame = CFrame.new(targetHrp.Position + offset, targetHrp.Position)
            
            -- 2. Camera Lock
            camera.CFrame = CFrame.new(camera.CFrame.Position, targetHrp.Position)
            
            -- 3. Dedicated Slot 1 Logic
            if LockedTool then
                -- Only equip if we aren't already holding it
                if LockedTool.Parent ~= char and LockedTool.Parent == LocalPlayer.Backpack then
                    LockedTool.Parent = char
                end
                
                -- Auto Fire / Use
                if LockedTool.Parent == char then
                    LockedTool:Activate()
                end
            end
        end
    end
end)

-- // Toggle
UIS.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    
    if input.KeyCode == Enum.KeyCode.K then
        Settings.OrbitActive = not Settings.OrbitActive
        
        if Settings.OrbitActive then
            -- Lock the tool the moment you start orbiting
            LockedTool = GetFirstWeapon()
            
            Status.Text = "ACTIVE: " .. (LockedTool and LockedTool.Name or "No Tool")
            Status.TextColor3 = Color3.fromRGB(0, 255, 0)
            
            if LocalPlayer.Character then
                for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
                    if v:IsA("BasePart") then v.CanCollide = false end
                end
            end
        else
            Status.Text = "STATUS: IDLE"
            Status.TextColor3 = Color3.fromRGB(200, 200, 200)
            LockedTool = nil -- Release the lock
            
            if LocalPlayer.Character then
                for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
                    if v:IsA("BasePart") then v.CanCollide = true end
                end
            end
        end
    end
end)
