-- // 1. Load the Library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/kokomilikeskokonut-gif/Meow/refs/heads/main/1-main/projects/ui.lua"))()

-- // 2. Configuration & State
local Settings = {
    DodgeMode = "None", -- "None", "Spin", or "Jitter"
    DodgeSpeed = 100
}

-- // 3. Build the UI
local Window = Library:new({
    name = "Meow - Bullet Dodge",
    ConfigName = "DodgeConfig"
})

local MainTab = Window:page({name = "Main"})

-- Dodge Selection Section
local ModeSection = MainTab:section({name = "Select Dodge Mode"})

ModeSection:button({
    name = "OFF / RESET",
    callback = function()
        Settings.DodgeMode = "None"
        print("Dodge Disabled")
    end
})

ModeSection:button({
    name = "ACTIVATE SPIN DODGE",
    callback = function()
        Settings.DodgeMode = "Spin"
        print("Mode: Spinning")
    end
})

ModeSection:button({
    name = "ACTIVATE JITTER DODGE",
    callback = function()
        Settings.DodgeMode = "Jitter"
        print("Mode: Jittering")
    end
})

-- Settings Section
local SettingsSection = MainTab:section({name = "Dodge Intensity"})

SettingsSection:slider({
    name = "Speed / Force",
    min = 10,
    max = 500,
    default = 100,
    callback = function(v)
        Settings.DodgeSpeed = v
    end
})

-- // 4. Dodge Engine (RunService)
game:GetService("RunService").RenderStepped:Connect(function()
    local lp = game.Players.LocalPlayer
    local char = lp.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")

    if not hrp then return end

    if Settings.DodgeMode == "Spin" then
        -- Rapid rotation to desync head hitboxes
        hrp.CFrame = hrp.CFrame * CFrame.Angles(0, math.rad(Settings.DodgeSpeed), 0)
        
    elseif Settings.DodgeMode == "Jitter" then
        -- Rapid side-to-side snapping to break projectile prediction
        local offset = (math.random(-1, 1) * Settings.DodgeSpeed) / 50
        hrp.CFrame = hrp.CFrame * CFrame.new(offset, 0, 0)
    end
end)
